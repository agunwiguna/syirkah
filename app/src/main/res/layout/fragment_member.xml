<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primaryTextColor">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/des_atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:text="Informasi Member"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="80dp">

                <com.loopeer.shadow.ShadowView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    app:shadowColor="@android:color/darker_gray"
                    app:cornerRadius="20dp"
                    app:shadowRadius="20dp"
                    app:shadowMargin="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"/>

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="match_parent"
                            android:layerType="software"
                            android:background="@drawable/garis_putus_putus_vertikal"/>

                        <EditText
                            android:id="@+id/cari_ustadz"
                            android:layout_weight="1.5"
                            android:layout_width="100dp"
                            android:textSize="15sp"
                            android:hint="Cari Member"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:paddingStart="10dp"
                            android:fontFamily="@font/rubik_regular"
                            android:textColor="@android:color/darker_gray"
                            android:background="@android:color/transparent"
                            android:layout_height="match_parent"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                </com.loopeer.shadow.ShadowView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginStart="0dp"
        app:cornerRadiusTL="40dp"
        app:cornerRadiusTR="40dp"
        app:shadowColor="@android:color/darker_gray"
        app:shadowMarginTop="5dp"
        app:shadowRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/judul_ustadz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Daftar Member"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:text="Member Syirkah"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_ustadz">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_height="0dp"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:paddingStart="30dp"
                                android:layout_width="0dp"
                                android:gravity="start|center_vertical"
                                android:layout_weight="1.5"
                                android:orientation="horizontal"
                                android:layout_height="match_parent"
                                tools:ignore="NestedWeights,RtlSymmetry">

                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:background="@drawable/bg_border">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/foto_ustadz"
                                        android:layout_gravity="center"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@android:color/darker_gray"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="start"
                                    android:layout_marginStart="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/nama_ustadz"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Agun Wiguna"
                                        android:textColor="#3B4F85"
                                        android:fontFamily="@font/nunito_bold"
                                        android:textFontWeight="500"
                                        android:textSize="14sp" />
                                    <TextView
                                        android:id="@+id/alamat_ustadz"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/rubik_regular"
                                        android:textColor="@android:color/darker_gray"
                                        android:text="Jln. Batununggal Abadi I No.4 Bandung"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">

                                <android.support.v7.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#189D0E"
                                    app:cardElevation="6dp"
                                    app:cardCornerRadius="12dp"
                                    >
                                    <Button
                                        android:id="@+id/btn_wa"
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:tint="@android:color/white"
                                        android:background="@drawable/phone"/>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#ECECEC"/>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mem1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:weightSum="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_height="0dp"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:paddingStart="30dp"
                                android:layout_width="0dp"
                                android:gravity="start|center_vertical"
                                android:layout_weight="1.5"
                                android:orientation="horizontal"
                                android:layout_height="match_parent"
                                tools:ignore="NestedWeights,RtlSymmetry">

                                <LinearLayout
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:background="@drawable/bg_border">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/foto_member"
                                        android:layout_gravity="center"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@android:color/darker_gray"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:gravity="start"
                                    android:layout_marginStart="20dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/nama_member"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Muhammad Jaariyah"
                                        android:textColor="#3B4F85"
                                        android:fontFamily="@font/nunito_bold"
                                        android:textFontWeight="500"
                                        android:textSize="14sp" />
                                    <TextView
                                        android:id="@+id/alamat_member"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:fontFamily="@font/rubik_regular"
                                        android:textColor="@android:color/darker_gray"
                                        android:text="Jln. Batununggal Abadi I No.4 Bandung"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5">

                                <android.support.v7.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#189D0E"
                                    app:cardElevation="6dp"
                                    app:cardCornerRadius="12dp">
                                    <Button
                                        android:id="@+id/btn_was"
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:tint="@android:color/white"
                                        android:background="@drawable/phone"/>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="#ECECEC"/>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </com.loopeer.shadow.ShadowView>

</RelativeLayout>