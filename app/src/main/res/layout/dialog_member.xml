<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/det_foto_ustadz"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@android:color/darker_gray"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="5dp" />

            <TextView
                android:id="@+id/det_nama_ustadz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/det_foto_ustadz"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Agun Wiguna"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/status_ustadz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/det_nama_ustadz"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/rubik_regular"
                android:text="Cyberlabs" />

            <ImageView
                android:id="@+id/garis"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_below="@+id/status_ustadz"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/garis_putus_putus"
                android:layerType="software" />

            <TextView
                android:id="@+id/det_alamat_ustadz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/darker_gray"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="Jl. Sekeloa Utara, Kota Bandung"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/garis2"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_below="@+id/det_alamat_ustadz"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/garis_putus_putus"
                android:layerType="software" />

            <TextView
                android:id="@+id/det_masjid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis2"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_wb_sunny_black_24dp"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/darker_gray"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="10 Gram"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/garis3"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_below="@+id/det_masjid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/garis_putus_putus"
                android:layerType="software" />

            <LinearLayout
                android:id="@+id/call_pengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_whatsapp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CHAT"
                    android:textColor="#28A83D"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>